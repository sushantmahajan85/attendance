<!DOCTYPE html>
<html>
  <head>
    <title>Attendance Manager</title>
    
  </head>
  <body>
      <h1>Edit Page</h1>
      
      <% attendance.forEach(function(meeting){ %>
        <br>
        
        <h3 style="display: inline;">Date</h3>   : <% <%=meeting.Date%>.toDateString().split(' ').slice(0,3).join(' ')   %>
        <h3>EDIT Attendance</h3>
        <form action = "/edit/<%=meeting._id%>?_method=PUT" method = "POST">
          Payas    :
          
          <% if(<%= meeting.Payas %> =="Present"){ %>   
            <label for="present">Present</label>
            <input id="present"type="radio" name="payas" value="Present" checked>
          <%}%>
          <% else{ %>
            <label for="present">Present</label>
            <input id="present"type="radio" name="payas" value="Present"> <!--comment-->
          <%}%>

          <% if(<%= meeting.Payas %> =="Absent"){%>
            <label for="absent">Absent</label>
            <input id="absent"type="radio" name="payas" value="Absent" checked>
          <%}%>
          <% else{ %>
            <label for="absent">Absent</label>
            <input id="absent"type="radio" name="payas" value="Absent">
          <%}%>

          <br>

          <% if(<%= meeting.Sushant %> =="Present"){%>   
            <label for="present">Present</label>
            <input id="present"type="radio" name="sushant" value="Present" checked>
          <%}%>
          <% else{ %>
            <label for="present">Present</label>
            <input id="present"type="radio" name="sushant" value="Present">
          <%}%>

          <% if(<%= meeting.Sushant %> =="Absent"){%>
            <label for="absent">Absent</label>
            <input id="absent"type="radio" name="sushant" value="Absent" checked>
          <%}%>
          <% else{ %>
            <label for="absent">Absent</label>
            <input id="absent"type="radio" name="sushant" value="Absent">
          <%}%>

          <br>

          <% if(<%= meeting.Saksham %> =="Present"){%>   
            <label for="present">Present</label>
            <input id="present"type="radio" name="saksham" value="Present" checked>
          <%}%>
          <% else{ %>
            <label for="present">Present</label>
            <input id="present"type="radio" name="saksham" value="Present">
          <%}%>

          <% if(<%= meeting.Saksham %> =="Absent"){%>
            <label for="absent">Absent</label>
            <input id="absent"type="radio" name="saksham" value="Absent" checked>
          <%}%>
          <% else{ %>
            <label for="absent">Absent</label>
            <input id="absent"type="radio" name="saksham" value="Absent">
          <%}%>
          
          <br>
          
        </form>
      <% }); %>
  </body>
</html>
