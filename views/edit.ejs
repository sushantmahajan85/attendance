<!DOCTYPE html>
<html>
  <head>
    <title>Attendance Manager</title>
  </head>
  <body>
    <h1>Edit Page</h1>
    <% for( var meeting of attendance ) { %>
      <br>
    <h3 style="display: inline;">Date</h3>  <%= meeting.Date.toDateString().split(' ').slice(0,3).join(' ')%>
    <h3>EDIT Attendance</h3>
    <form action = "/<%=meeting._id%>?_method=PUT" method="POST">
      Payas : <% if (meeting.Payas=="Present") { %>
      <label for="present">Present</label>
      <input id="present" type="radio" name="data[payas]" value="Present" checked />

      <% } else { %>
      <label for="present">Present</label>
      <input id="present" type="radio" name="data[payas]" value="Present" />
      <!--comment-->
      
      <% } %>
      <% if (meeting.Payas=="Absent") { %>
        <label for="absent">Absent</label>
        <input id="absent" type="radio" name="data[payas]" value="Absent" checked />
  
        <% } else { %>
        <label for="absent">Absent</label>
        <input id="absent" type="radio" name="data[payas]" value="Absent" />
        <!--comment-->
        
        <% } %>
      <br>
      Sushant : <% if (meeting.Sushant=="Present") { %>
        <label for="present">Present</label>
        <input id="present" type="radio" name="data[sushant]" value="Present" checked />
  
        <% } else { %>
        <label for="present">Present</label>
        <input id="present" type="radio" name="data[sushant]" value="Present" />
        <!--comment-->
              
        <% } %>
        <% if (meeting.Sushant=="Absent") { %>
          <label for="absent">Absent</label>
          <input id="absent" type="radio" name="data[sushant]" value="Absent" checked />
    
          <% } else { %>
          <label for="absent">Absent</label>
          <input id="absent" type="radio" name="data[sushant]" value="Absent" />
          <!--comment-->
          
          <% } %>
        <br>  
        Saksham : <% if (meeting.Saksham=="Present") { %>
          <label for="present">Present</label>
          <input id="present" type="radio" name="data[saksham]" value="Present" checked />
    
          <% } else { %>
          <label for="present">Present</label>
          <input id="present" type="radio" name="data[saksham]" value="Present" />
          <!--comment-->
                
          <% } %>
          <% if (meeting.Saksham=="Absent") { %>
            <label for="absent">Absent</label>
            <input id="absent" type="radio" name="data[saksham]" value="Absent" checked />
      
            <% } else { %>
            <label for="absent">Absent</label>
            <input id="absent" type="radio" name="data[saksham]" value="Absent" />
            <!--comment-->
            
            <% } %>
            
        <br>
        <button>Submit!</button>
    </form>
    <% } %>

    <script type="text/javascript" src="/css/edit.js"></script>
  </body>
</html>
