<!DOCTYPE html>
<html>
  <head>
    <title>Attendance Manager</title>
  </head>
  <body>
    <h1>Edit Page</h1>
    <% for( var meeting of attendance ) { %>

    <h3 style="display: inline;">Date</h3>
    <h3>EDIT Attendance</h3>
    <form action="/edit/<%=meeting._id%>?_method=PUT" method="POST">
      Payas : <% if (meeting.Payas=="Present") { %>
      <label for="present">Present</label>
      <input id="present" type="radio" name="payas" value="Present" checked />

      <% } else { %>
      <label for="present">Present</label>
      <input id="present" type="radio" name="payas" value="Present" />
      <!--comment-->

      <% } %>
    </form>
    <% } %>

    <script type="text/javascript" src="/css/edit.js"></script>
  </body>
</html>
